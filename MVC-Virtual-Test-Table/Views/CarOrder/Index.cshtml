@model CarOrderViewModel

<h2>Rent a Car</h2>

<form asp-action="Index" method="post" class="needs-validation" novalidate>


    <div class="mb-3">

        <label asp-for="ColourId" class="form-label"></label>
        <select class="form-select" id="customerId" name="CustomerId" asp-for="ColourId" asp-items="@(new SelectList(Model.Colours,"Id","Name"))">
            <option value="">Choose Colour</option>

        </select>

    </div>

    <div class="mb-3">

        <label asp-for="BrandId" class="form-label"></label>
        <select class="form-select" id="brandId" name="BrandId" asp-for="BrandId" asp-items="@(new SelectList(Model.Brands,"Id","Name"))">
            <option value="">Choose Brand</option>

        </select>

    </div>

    <div class="mb-3">

        <label asp-for="CarModelId" class="form-label"></label>
        <select class="form-select" id="carModel" name="CarModelId" asp-for="CarModelId" asp-items="@(new SelectList(Model.CarModels,"Id","Name"))">
            <option value="">Choose Model</option>

        </select>

    </div>
    
    <div class="mb-3">

        <label asp-for="BodyTypeId" class="form-label"></label>
        <select class="form-select" id="bodyType" name="BodyTypeId" asp-for="BodyTypeId" asp-items="@(new SelectList(Model.BodyTypes,"Id","Name"))">
            <option value="">Choose BodyType</option>

        </select>

    </div>

    <div class="mb-3">
        <label asp-for="OrderNo" class="form-label"></label>
        <input asp-for="OrderNo" type="text" class="form-control" />
    </div>

</form>

<button type="submit" class="btn btn-success">Kaydet</button>
